<phpdox xmlns="http://xml.phpdox.net/config">
    <project name="Axstrad/ContentBundle" source="." workdir="build/phpdox">
        <collector publiconly="false">
            <include mask="*.php" />
            <exclude mask="vendor/**/*.php" />
            <exclude mask="build/**/*.php" />
        </collector>

        <generator output="build">
            <build engine="html" enabled="true" output="api">
                <file extension="html" />
            </build>
        </generator>
    </project>
</phpdox>
